    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <fileset dir="${path.variable.path_to_fx}">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_odz.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.odz" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.odz" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.odz:jar" value="${basedir}/out/artifacts/ODZ_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ODZ.jar" value="${artifacts.temp.dir}/ODZ.jar"/>
  </target>
  
  <target name="artifact.odz:jar" depends="init.artifacts, compile.module.odz" description="Build &#39;ODZ:jar&#39; artifact">
    <property name="artifact.temp.output.odz:jar" value="${artifacts.temp.dir}/ODZ_jar"/>
    <mkdir dir="${artifact.temp.output.odz:jar}"/>
    <jar destfile="${temp.jar.path.ODZ.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${odz.output.dir}"/>
      <zipfileset src="${path.variable.path_to_fx}/src.zip"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx-swt.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.web.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.base.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.fxml.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.media.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.swing.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.controls.jar"/>
      <zipfileset src="${path.variable.path_to_fx}/javafx.graphics.jar"/>
    </jar>
    <copy file="${temp.jar.path.ODZ.jar}" tofile="${artifact.temp.output.odz:jar}/ODZ.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.odz:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.odz:jar}"/>
    <copy todir="${artifact.output.odz:jar}">
      <fileset dir="${artifact.temp.output.odz:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>